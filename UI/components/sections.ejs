<div class="container mt-5">

    <% itemsSections.forEach(item => { %>
        <section class="custom-section row">
            <% if(item.img != ""){%>
                <div class="col-lg-5 zoom-container">
                    <img class="img-fluid" src="<%= item.img %>" alt="Immagine <%= item.title %>">
                </div>
                <div class="col-lg-7 bg-light rounded border p-2">
            <% } else{ %>
                <div class="col-lg-12 bg-light rounded border p-2">
            <% }; %>
                    <h2 class="text-center text-primary-custom p-2"><%= item.title %></h2>
                    <p class="text-primary-custom text-center p-2"><%= item.lines %></p>
                    <p class="text-center"> <a class="btn btn-custom" href='<%= item.href %>'>Contattaci!</a></p>
                </div>
        </section>
    
    <% }); %>

